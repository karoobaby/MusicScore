<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:music="http://schemas.android.com/apk/res/com.example.musicscore"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="com.example.musicscore.TestActivity"
    android:orientation="vertical">
    <LinearLayout android:orientation="horizontal" 
        android:layout_width="match_parent" 
        android:layout_height="60dp"
        android:gravity="center">
	<TextView
	    android:id="@+id/txt_jishu" 
	    android:layout_width="wrap_content" 
	    android:layout_height="match_parent" 
	    android:text="技术"/>
	<TextView android:id="@+id/txt_yuegan"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:text="乐感"/>
	<TextView android:id="@+id/txt_zhiliang"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:text="质量"/>
	<TextView android:id="@+id/txt_sangyin"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:text="嗓音"/>
	</LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
    <com.company.musicscore.util.Ruler
        android:id="@+id/jishu_ruler"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp" >
        </com.company.musicscore.util.Ruler>
	<com.company.musicscore.util.Ruler
	    android:id="@+id/yuegan_ruler"
	    music:title_Show="false"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp" >
    </com.company.musicscore.util.Ruler>
    <com.company.musicscore.util.Ruler
        android:id="@+id/zhiliang_ruler"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp" >
    </com.company.musicscore.util.Ruler>
    <com.company.musicscore.util.Ruler
        android:id="@+id/sangyin_ruler"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp" >
    </com.company.musicscore.util.Ruler>
    </LinearLayout>
    <!-- <com.company.musicscore.util.VerticalSeekBar 
        android:id="@+id/jishu_bar"
        android:max="25"
        android:layout_marginTop="10dp"
        android:thumb="@drawable/seekbar_thumb"
        android:progressDrawable="@drawable/progress_holo_light" 
        android:layout_height="match_parent"
        android:layout_width="wrap_content"/> -->
 </LinearLayout>

